@model ProductDetailModel




   
<div class="row ">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">
        
        <h1 class="mb-3">@Model.Product.Name</h1> <hr>
        @foreach (var item in Model.Categories)
        {
             <a asp-controller="Read" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3"> | @item.Name | </a>
        }
       
        
        <div class="mb-3">
            <small class="text-muted">3 days ago</small> <br> <br>

            <form asp-controller="Cart" asp-action="AddToCart"method="POST" class="form-inline" >
                <input type="hidden" name="productId" value="@Model.Product.ProductId">
                <input type="hidden" name="quantity" value="1" max="1">
                <button type="submit" class="btn btn-outline-primary btn-sm">Sonra Oku</button>
            </form>



            
        </div>
        
        
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 p-5"> 
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>

