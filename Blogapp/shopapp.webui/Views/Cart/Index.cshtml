@model CartModel

<h1 class="h3">Sonra Oku</h1>
<hr>

@if(Model.CartItems.Count==0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning">
                Sonra Oku'da Blog yok.
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
    <div class="col-md-8">
        <table class="table hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Blog AdÄ±</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="~/img/@item.ImageUrl" width="80" alt="">
                        </td>
                        <td>@item.Name</td>
                        

                        <td style="width: 100px;">
                             <form asp-controller="Cart" asp-action="DeleteFromCart" method="post" >
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                    
                                </form>
                               
                                
                        </td>
                        <td style="width: 100px;">
                             <form asp-controller="Read" asp-action="Details" asp-route-Url="@item.Name.ToLower()" >
                                    <button type="submit" class="btn btn-primary btn-sm">Oku</button>
                                </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4"></div>
</div>

}


