@model ProductListViewModel

<div class="row">
    
    <div class="col-md-12">
        <h1 class="h3">Admin BloglarÄ±</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/blogs/create">Blog Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px">ID</td>
                    <td >Description</td>
                    <td style="width: 100px">Image</td>
                    <td style="width: 30px">Name</td>
                    <td style="width: 30px">Anasayfa</td>
                    
                    <td style="width: 150px"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count>0)
                {
                     @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@Html.Raw(item.Description)</td>
                            <td><img src="~/img/@item.ImageUrl" width="80"></td>
                            <td>@item.Name</td>
                            <td>
                                @if(item.IsHome)
                                {
                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>
                            
                            <td>
                                <a href="/admin/blogs/@item.ProductId" class="btn btn-warning btn-sm mr-2">Edit</a>
                                <form action="/admin/deleteproduct" method="POST" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item.ProductId"> 
                                    <button type="submit"class="btn btn-danger btn-sm">Delete</button>
                                </form>
                                
                               
                                
                            </td>
                        </tr>
                    
                    }
                }
                else
                {
                   <div class="alert alert-warning">
                       <h3>Blog Yok</h3>
                   </div>
                }
               
            </tbody>
        </table>
    </div>
</div>